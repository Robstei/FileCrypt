<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/18"
      fx:controller="edu.junit5.quickstart.controller.SignatureSignController">
    <children>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                   prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                   prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Algorithm"/>
                <RadioButton mnemonicParsing="false" text="SHA256withDSA"
                             userData="AES" GridPane.rowIndex="1">
                    <toggleGroup>
                        <ToggleGroup fx:id="signature_algorithm"/>
                    </toggleGroup>
                </RadioButton>
            </children>
        </GridPane>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                   prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                   prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button mnemonicParsing="false" onAction="#selectFileToSign"
                        text="Select File"/>
                <Label fx:id="signatureSignFilePathLabel"
                       GridPane.rowIndex="1"/>
                <Button mnemonicParsing="false" onAction="#sign" text="Sign"
                        GridPane.rowIndex="2"/>
            </children>
        </GridPane>
    </children>
</VBox>
