<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity"
      maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="305.0"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/18"
      fx:controller="edu.junit5.quickstart.controller.SymmetricEncryptionDecryptController">
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                               prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0"
                            vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0"
                            vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0"
                            vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0"
                            vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0"
                            vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0"
                            vgrow="SOMETIMES"/>
        </rowConstraints>
        <Button mnemonicParsing="false" onAction="#selectFileToDecrypt"
                text="Select File"/>
        <Button mnemonicParsing="false" onAction="#selectKeyFile"
                text="Select Key File" GridPane.rowIndex="2"/>
        <Button fx:id="encryptionDecryptButton" mnemonicParsing="false"
                onAction="#decrypt" text="Decrypt" GridPane.rowIndex="4"/>
        <Label fx:id="decryptFilePathLabel" GridPane.rowIndex="1"/>
        <Label fx:id="keyFilePathLabel" GridPane.rowIndex="3"/>
    </GridPane>
</VBox>
